{
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Alias support */
    "baseUrl": "./",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~assets/*": ["./src/assets/*"],
      "~utils/*": ["./src/utils/*"],
      "~redux/*": ["./src/redux/*"],
      "~app/*": ["./src/app/*"],
      "~firebase/*": ["./src/firebase/*"],
      "~theme/*": ["./src/theme/*"],
      "~modals/*": ["./src/modals/*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },

  "include": ["src/**/*", "src/components/**/*", ".storybook/**/*", "*.ts/*.tsx"],

  "extends": "expo/tsconfig.base"
}
