{
  "compilerOptions": {
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias support */
    "baseUrl": "./",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~theme/*": ["./src/theme/*"],
      "~assets/*": ["./src/assets/*"],
      "~utils/*": ["./src/utils/*"],
      "~redux/*": ["./src/redux/*"],
      "~app/*": ["./src/app/*"],
      "~i18n/*": ["./src/i18n/*"],
      "~firebase/*": ["./src/firebase/*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },

  "include": ["src/**/*", "components/**/*", ".storybook/**/*", "*.ts/*.tsx"],

  "extends": "expo/tsconfig.base"
}
